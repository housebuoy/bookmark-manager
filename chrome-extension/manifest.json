{
  "manifest_version": 3,
  "name": "Bookmark Manager Pro",
  "version": "1.0",
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://bookmark-manager-xyz.vercel.app/*",
    "https://bookmark-manager-d117.onrender.com/*"
  ],
  "externally_connectable": {
    "matches": ["https://bookmark-manager-xyz.vercel.app/*"]
  }
}